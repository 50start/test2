<!-- Button trigger modal -->
<div class="container mt-5">
  <div class="row">
    <div class="col-3">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
       ご感想・ご意見はこちらからお願いいたします
      </button>
      <p class="onegai">※万が一不適切なコメントがございましたら私の方で削除いたします。ご了解のほどお願いいたします。</p>
      </div>
      <div class="col-9 comments">
      <%= render 'comments', comments: @comments %>
      </div>
    </div>
 </div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">暖かいコメントお願いします</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_for @comment, remote: true do |f| %>
      <div class="modal-body">
          <div class="form-group">
            <%= f.label :title, "NICKNAME" %>
            <%= f.text_field :title,class:"form-control"%>
          </div>
          <div class="form-group">
            <%= f.label :body, "ご意見・ご感想" %>
            <%= f.text_area :body,class:"form-control"%>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
          <%= f.submit "投稿する",class:"btn btn-primary" %>
        </div>
    <% end %>
    </div>
  </div>
</div>
