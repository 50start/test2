<div class="container">
  <div class="text-left"> 
    <% if user_signed_in? %>
     <button type="button" class="btn btn-warning btn-sm"><%= link_to'新規投稿',new_test_path %></button>
     <button type="button" class="btn btn-secondary btn-sm"><%= link_to'ログアウト',destroy_user_session_path, method: :delete %></button>
      <% else %>
    <button type="button" class="btn btn-secondary btn-sm"><%= link_to'新規登録',new_user_registration_path %></button>
    <button type="button" class="btn btn-secondary btn-sm"><%= link_to'ログイン',user_session_path %></button>
      <% end %>
       </div>
        <% @tests.each do |test| %>
         <div class="col-md-3">
          <%= link_to test do %>
          <%= attachment_image_tag test, :image, :fill, 260, 260, fallback: "no_image.jpg" %>
          <P class="top-title"><%= test.title %></P>
        </div>
      <% end %>
    　<% end %>
    </div>
   

 