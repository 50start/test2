<div class="container">
 <div class="row">
  <div class="text-center"> 
    <% @tests.each do |test| %>
      <div class="col-md-3">
        <%= link_to test do %>
          <% if test.image.attached? %>
           <%= image_tag test.image, class: 'img-responsive center-block img-thumbnail'%>
             <% end %>
             <div class="top-title"><%= test.title %>
               <div class="text-right">
                <%= test.created_at.strftime("%Y年%m月%d日") %>
                </div>
              </div> 
           </div>
          <% end %>
    　   <% end %>
       </div>
       </div>
        <% if current_user && current_user.admin_flg %>
       <%= link_to'新規投稿画面へ',new_test_path %>
       <%= link_to'ログアウト',destroy_user_session_path %>
       <%= link_to'新規登録',new_user_registration_path %>
       <%= link_to'ログイン',user_session_path %>
       <% end %>
       </div>
   
  
    
   
    
   
    