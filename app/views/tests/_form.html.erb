 <%= form_for test do |f| %>
          
 <div class="form-group">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: "form-control" %>
 </div> 
          
 <div class="form-group">
    <%= f.label :body, "記事" %>
    <%= f.text_area :body, rows:10, class: "form-control" %>
 </div>

 <div class="form-group">
     <%= f.label :image, "写真", class: "label" %>
     <%= f.attachment_field :image, class: "input" %>
 </div>

    <%= f.submit '投稿', class: "btn btn-secondary" %>

<% end %>
